					opcao=4;
				}

			} while(resp == 0);
		} else if (opcao == 2) {
			system("cls");
			gotoxy(5, 3);
			 opcao=alteracaoAviao(aviao,arq);
			

	
		if (resp == 1){

			opcao = 4;
		}
			if (resp == 6) {
				opcao=4;
			}
		}else if (opcao == 3 ){
			do{
			
			exclusaoAviao(aviao,testes,arq);
		//	arq = remove("structAviao"); apaga toto o arquivo
					do{
								
					printf ("\n\nDeseja continuar ?\nComtinuar [0]-Parar [1]\n\n");
					scanf ("%i",&resp);
				}while (resp != 0 & resp !=1 );
				
				if (resp == 1) {
					opcao = 4;
				}
			} while (resp == 0);
		}

	} else if (opcao == 2) {

		textcolor(7);
		textbackground(0);
		gotoxy(5, 3);
	opcao =	mostraMenuPista();

		if (opcao == 3) {
			opcao = 4;

		} else if (opcao == 1) {
			do {

				system("cls");
			codigoSeguemcial = inclusaoPista (pistaTeste,codigoSeguemcial,&cont2,arqP);
				
				do{
								
					printf ("\n\nDeseja continuar ?\nComtinuar [0]-Parar [1]\n\n");
					scanf ("%i",&resp);
				}while (resp != 0 & resp !=1 );
				
				if (resp == 1) {
					opcao = 4;
				}
			} while (resp == 0);

		}

	} else if (opcao == 3) {
	
