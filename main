int mostraMenuAviao () {
	setlocale(LC_ALL, "C");
	char tecla;
	int i, opcao,resp;
	textbackground(0); // Define cor de fundo
	clrscr();          // Limpa a tela
	_setcursortype(0); // Desliga o cursor
	textcolor(15);     // Define cor de face

	gotoxy(19,6);
	printf("           <<<  A V I A O   >>>");
	// DESENHAR UM QUADRADO
	// Desenha as linhas horizontais do quadrado
	textcolor(7);
	for (i=34; i<=51; i++) {
		gotoxy(i,9);
		printf("%c", 196);
		gotoxy(i,18);
		printf("%c", 196);
	}
	// Desenha as linhas verticais do quadrado
	for (i=9; i<=17; i++) {
		gotoxy(33,i);
		printf("%c", 179);
		gotoxy(51,i);
		printf("%c", 179);
	}
	// Desenha os quanto cantos do quadrado
	gotoxy(33,9);
	printf("%c", 218);
	gotoxy(51,9);
	printf("%c", 191);
	gotoxy(33,18);
	printf("%c", 192);
	gotoxy(51,18);
	printf("%c", 217);

	// OPERACAO DO MENU
	opcao = 1; // Seleciona a primeira opcao do menu
	do {
		setlocale(LC_ALL, "");
		textcolor(7);
		textbackground(0);
		gotoxy(34,11);
		printf("  INCLUIR AVIÃO");
		gotoxy(34,12);
		printf("  ALTERAR AVIAO");
		gotoxy(34,13);
		printf("  EXCLUIR AVIAO");
		gotoxy(34,14);
		printf("  VOLTAR AO MENU");
		// Escreve o item selecionado em destaque
		textcolor(15);
		//textbackground(1);
		switch (opcao) {
			case 1:
				gotoxy(34,11);
				printf("->");
				break;
			case 2:
				gotoxy(34,12);
				printf("->");
				break;
			case 3:
				gotoxy(34,13);
				printf("->");
				break;
			case 4:
				gotoxy(34,14);
				printf("->");
				break;
		}
		tecla = getch();    // Recebe a tecla pressionada
		if (tecla == -32) { // -32 = tecla especial (setas, etc...)
			tecla = getch(); // Recebe o novo valor ecoado no buffer por ser tecla especial
			if (tecla == 72) // Seta para cima
				opcao--;
			if (tecla == 80) // Seta para baixo
				opcao++;
			if (opcao == 0)
				opcao = 5;
			if (opcao == 6)
				opcao = 1;
		}
	} while ((tecla != 13) && (tecla != 27)); // 13=ENTER 27=ESC

	textcolor(15);
	textbackground(0);

	return opcao;
}

int  inclusaoPista (struct PistaTeste pistaTeste,int codigoSeguemcial, int *pcont,FILE *arqP) {
	arqP=fopen ("structPista","ab");
	if (arqP== NULL){
	printf ("Erro na abertura..");
	exit (1);
}
	int cont;
	cont = *pcont;
	textcolor(7);
	textbackground(0);
	int i;
	setlocale(LC_ALL, "C");
	printf ("\t\t<< I N C L U S A O  P I S T A >>>\n");
	printf ("|ENDEREÇO :\n");
	fflush(stdin);
	fgets (pistaTeste.enderecoPista,128,stdin);
	printf ("|UF da pista:\n");
	fgets (pistaTeste.uf,2,stdin);
	fflush(stdin);
	do {
		printf ("|Tamanho do circuito (km) :");
		scanf ("%f",&pistaTeste.tamanhoCircuito);
	} while (pistaTeste.tamanhoCircuito < 0);
	printf ("|Velocidade maxima :\n");
	scanf ("%i",&pistaTeste.velocidadeMax);

	codigoSeguemcial =  codigoSeguemcial + 1;
	pistaTeste.codSequencial = codigoSeguemcial;
	printf ("O seu codico sequencial e:\n ");
	printf ("%i",pistaTeste.codSequencial);
	cont++;
	*pcont = cont;
	fwrite (&pistaTeste,sizeof (pistaTeste),1,arqP);
	fclose(arqP);
	return codigoSeguemcial;
}



int inclusaoAviao(struct Aviao aviao,int cont,FILE *arq) {
	
	arq=fopen ("structAviao","ab");
	if (arq== NULL){
	printf ("Erro na abertura..");
	exit (1);
}
	printf("\t\tINCLUSAO DE AVIAO");
	printf("\n\n");

   aviao=validaCodigo(aviao,arq);
	
	printf("\n");
	printf("|Digite o modelo do aviao:");
	fflush(stdin);
	fgets(aviao.modelo,11,stdin);
	while(aviao.modelo == "\n") {
		printf("|Modelo invalido, digite novamente:");
		fflush(stdin);
		fgets(aviao.modelo,11,stdin);
	}
	
	printf("|Modelo do aviao: %s", aviao.modelo);//
	printf("|codigo do aviao: %s", aviao.codigo);//


	printf("\n");
	printf("|Digite a capacidade de passageiros do aviao: ");
	scanf("%d", &aviao.capacidade);
	while(aviao.capacidade <= 0) {
		printf("|capacidade inválida, digite novamente:");
		scanf("%d", &aviao.capacidade);
	}
	printf("|Capacidade do aviao: %d passageiros",aviao.capacidade);//


	printf("\n");
	printf("|Digite o nome do cliente: ");
	fflush(stdin);
	fgets(aviao.nomeCliente,64,stdin);
	while(aviao.nomeCliente[0] == '\n') {
		printf("|Nome inválido, digite novamente:");
		fflush(stdin);
		fgets(aviao.nomeCliente,64,stdin);
	}
	printf("|Nome do cliente : %s", aviao.nomeCliente);//


	printf("\n");
	printf("|Digite o país de origem do cliente: ");
	fflush(stdin);
	fgets(aviao.paisOrigCliente,32,stdin);
	printf("|País do cliente : %s", aviao.paisOrigCliente);	//
	
	
	fwrite (&aviao,sizeof (aviao),1,arq);
	fclose(arq);
	cont ++;			
	
	return cont;
}


int mostrarAlteracaoAviao() {
	setlocale(LC_ALL, "C");
	char tecla;
	int i, opcao,resp;
	textbackground(0); // Define cor de fundo
	clrscr();          // Limpa a tela
	_setcursortype(0); // Desliga o cursor
	textcolor(15);     // Define cor de face

	gotoxy(19,6);
	printf("           <<<  P I S T A - T E S T E  >>>");
	// DESENHAR UM QUADRADO
	// Desenha as linhas horizontais do quadrado
	textcolor(7);
	for (i=34; i<=60; i++) {
		gotoxy(i,9);
		printf("%c", 196);
		gotoxy(i,18);
		printf("%c", 196);
	}
	// Desenha as linhas verticais do quadrado
	for (i=9; i<=17; i++) {
		gotoxy(33,i);
		printf("%c", 179);
		gotoxy(60,i);
		printf("%c", 179);
	}
	// Desenha os quanto cantos do quadrado
	gotoxy(33,9);
	printf("%c", 218);
	gotoxy(60,9);
	printf("%c", 191);
	gotoxy(33,18);
	printf("%c", 192);
	gotoxy(60,18);
	printf("%c", 217);

	// OPERACAO DO MENU
	opcao = 1; // Seleciona a primeira opcao do menu
	do {
		setlocale(LC_ALL, "");
		textcolor(7);
		textbackground(0);
		gotoxy(34,11);
		printf("  AlTERAR CODIGO");
		gotoxy(34,12);
		printf("  ALTERAR MODELO");
		gotoxy(34,13);
		printf("  AlTERAR CAPACIDADE");
		gotoxy(34,14);
		printf("  AlTERAR NOME CLIENTE:");
		gotoxy(34,15);
		printf("  AlTERAR PAIS DO CLIENTE:");
		gotoxy(34,16);
		printf("  VOLTAR AO MENU");


		// Escreve o item selecionado em destaque
		textcolor(15);
		//textbackground(1);
		switch (opcao) {
			case 1:
				gotoxy(34,11);
				printf("->");
				break;
			case 2:
				gotoxy(34,12);
				printf("->");
				break;
			case 3:
				gotoxy(34,13);
				printf("->");
				break;
			case 4:
				gotoxy(34,14);
				printf("->");
				break;
			case 5:
				gotoxy(34,15);
				printf("->");
				break;
			case 6:
				gotoxy(34,16);
				printf("->");
				break;

		}
		tecla = getch();    // Recebe a tecla pressionada
		if (tecla == -32) { // -32 = tecla especial (setas, etc...)
			tecla = getch(); // Recebe o novo valor ecoado no buffer por ser tecla especial
			if (tecla == 72) // Seta para cima
				opcao--;
			if (tecla == 80) // Seta para baixo
				opcao++;
			if (opcao == 0)
				opcao = 6;
			if (opcao == 7)
				opcao = 1;
		}
	} while ((tecla != 13) && (tecla != 27)); // 13=ENTER 27=ESC

	textcolor(15);
	textbackground(0);

	return opcao;
}
int alteracaoAviao(struct Aviao aviao,FILE *arq) {
	arq = fopen ("structAviao","r+b");
	
		
	int retornoFuncao, i, posicao,resp,opcao,cont=0;
	char codigo[7], modelo[10], nome[64];

		// arrumar problema de invalido
	do {	
		system ("cls");
		printf ("informe seu codigo de indentificação : ");
		fflush(stdin);
		fgets(codigo,8,stdin);
		
	while (fread(&aviao,sizeof(aviao),1,arq)){
			if (stricmp(aviao.codigo,codigo)==0){

				textcolor(10);
				printf ("\t\tCODIGO VALIDO...\n\n");
				system ("pause");
				system ("cls");

				printf ("|MODELODO AVIAO: %s\n",aviao.modelo);
				printf ("---------------------------|\n");
				printf ("|NOME DO CLIENTE : %s\n",aviao.nomeCliente);
				printf ("---------------------------|\n");
				printf ("|PAIS DO CLIENTE : %s\n",aviao.paisOrigCliente);
				printf ("---------------------------|\n");
				printf ("|CAPACIDADE DO AVIAO : %d\n",aviao.capacidade);
				printf ("---------------------------|\n");
				printf ("|CODIGO: %s",aviao.codigo);
				printf ("---------------------------|\n\n\n");
				system ("pause");
					
				system ("cls");
	
				retornoFuncao = mostrarAlteracaoAviao();
		
				switch(retornoFuncao) {
				
		
				case 1:
					system("cls");
					gotoxy(5, 3);
					printf("alteração de código de identificação\n");
					printf("Inserimento de um novo código de id:");
					aviao=validaCodigo(aviao,arq);
					
					fseek(arq,sizeof(aviao)*-1,SEEK_CUR);
					fwrite (&aviao,sizeof(aviao),1,arq);
					fseek(arq,0,SEEK_SET);
				
			break;
				case 2:
					system("cls");
					gotoxy(5, 3);
					printf("alteração de modelo do avião\n");
		
					printf("Inserimento de um novo modelo de avião:");
					printf("\nInsira aqui: ");
					fflush(stdin);
					fgets(modelo,10,stdin);
					while(modelo[0] == '\n') {
						printf("codigo invalido, digite novamente:");
						fflush(stdin);
						fgets(modelo,10,stdin);
					}
					strcpy(aviao.modelo,modelo);
					
					fseek(arq,sizeof(aviao)*-1,SEEK_CUR);
					fwrite (&aviao,sizeof(aviao),1,arq);
					fseek(arq,0,SEEK_SET);
				
				
			 		break;
				case 3:
					system("cls");
					gotoxy(5, 3);
					printf("alteração de capacidade do avião\n");
		
					printf("Inserimento de uma nova capacidade do avião:");
					printf("\nInsira aqui: ");
					scanf("%d", &aviao.capacidade);
					while(aviao.capacidade <=0) {
						printf("Capacidade inválida, digite novamente: ");
						scanf("%d", &aviao.capacidade);
					}
				fseek(arq,sizeof(aviao)*-1,SEEK_CUR);
					fwrite (&aviao,sizeof(aviao),1,arq);
					fseek(arq,0,SEEK_SET);
				
				break;
					case 4:
					system("cls");
					gotoxy(5, 3);
					printf("alteração de nome do cliente\n");
		
					printf("Inserimento de um novo nome do cliente:");
					printf("\nInsira aqui: ");
					fflush(stdin);
					fgets(nome,64,stdin);
					while(nome[i] == '\n') {
						printf("nome inválido, digite novamente:");
						fflush(stdin);
						fgets(nome,64,stdin);
						
					}
				
					strcpy(aviao.nomeCliente,nome);
					fseek(arq,sizeof(aviao)*-1,SEEK_CUR);
					fwrite (&aviao,sizeof(aviao),1,arq);
					fseek(arq,0,SEEK_SET);
				
		
				break;
				case 5:
					system("cls");
					gotoxy(5, 3);
					printf("alteração de país de origem do cliente\n");
					break;
			}

//	fwrite (&aviao,sizeof (aviao),1,arq);
		system("cls");
			gotoxy(5, 3);
			
		printf ("\n\nDeseja continuar ?\nComtinuar [0]-Parar [1]\n\n");
		scanf ("%i",&resp);
		system ("pause");
		

	
		if (resp == 1){

			opcao = 4;
		}
			}
		//	fwrite (&aviao,sizeof (aviao),1,arq);
	
		}		
		

		if (strcmp(aviao.codigo,codigo)!=0){

				
		system("cls");
			gotoxy(5, 3);
			printf ("codico errdo..\n");
		printf ("\n\nDeseja continuar ?\nComtinuar [0]-Parar [1]\n\n");
		scanf ("%i",&resp);
		system ("pause");
		

	
		if (resp == 1){

			opcao = 4;
		}
		
	}
	

	} while(resp == 0);

	fclose(arq);

return opcao;
}

struct Aviao validaCodigo(struct Aviao aviao,FILE *arq) {
	 fseek(arq,0,SEEK_CUR);
	
	char codigo[8];
	int flag, i;
 arq=fopen ("structAviao.txt","r+b");
	do {
		flag = 0;
		printf("\n| Código de Identificação: ");
		fflush(stdin);
		fgets(codigo,8,stdin);
		
		while(codigo[0] == '\n') {
			printf("codigo invalido, digite novamente:");
			fflush(stdin);
			fgets(codigo,8,stdin);
		}
		if((codigo[0] >=65 && codigo[0] <=90) || (codigo[0] >=97 && codigo[0] <=122 )) {
			if((codigo[1] >=65 && codigo[1] <=90) || (codigo[1] >=97 && codigo[1] <=122 )) {
				if((codigo[2] >=65 && codigo[2] <=90) || (codigo[2] >=97 && codigo[2] <=122 )) {
					if(codigo[3] >=48 && codigo[3] <=57) {
						if(codigo[4] >=48 && codigo[4] <=57) {
							if(codigo[5] >=48 && codigo[5] <=57) {
								if(codigo[6] >=48 && codigo[6] <=57) {

								} else {
									printf("codigo invalido, verifique e tente novamente: ");
									flag++;
								}
							} else {
								printf("codigo invalido, verifique e tente novamente: ");
								flag++;
							}
						} else {
							printf("codigo invalido, verifique e tente novamente: ");
							flag++;
						}
					} else {
						printf("codigo invalido, verifique e tente novamente: ");
						flag++;
					}
				} else {
					printf("codigo invalido, verifique e tente novamente: ");
					flag++;
				}
			} else {
				printf("codigo invalido, verifique e tente novamente: ");
				flag++;
			}
		} else {
			printf("codigo invalido, verifique e tente novamente: ");
			flag++;
		}
	
		while (fread(&aviao, sizeof(aviao), 1, arq)){
				 fseek(arq,0,SEEK_CUR);
			if (strcmp(aviao.codigo,codigo)==0){
			
				printf("codigo já registrado, digite outro codigo");
				flag++;
			}
		}
		
		if(flag == 0) {
			printf("codigo registrado com sucesso");
			strcpy(aviao.codigo,codigo);
			printf("\ncodigo do aviao : %s", aviao.codigo);
		}
	} while(flag >= 1);
	return aviao;
	fclose(arq);
}


void exclusaoAviao(struct Aviao aviao, struct Testes testes,FILE *arq){
arq=fopen ("structAviao","r+");
	int retornoFuncao, i, j, posicao,resp,opcao, flag=0;
	char codigo[7], excluir;

	
	
		system ("cls");
		printf ("informe seu codigo de indentificação : ");
		fflush(stdin);
		fgets(codigo,8,stdin);
		while (fread(&aviao,sizeof(aviao),1,arq)){
			if (strcmp(aviao.codigo,codigo)==0){ 
		
		system ("cls");
		for(i= 0;i<MAX;i++){
			if (stricmp(aviao.codigo,codigo) == 0) {
				for(j= 0;j<MAX;j++){
					if(stricmp(aviao.codigo,testes.idAviao) == 0){
						printf("Este avião já tem um registro de teste\n não é possível excluí-lo!");
						system("pause");
						flag++;
						break;
					}
				}
				if(flag != 0){
					textcolor(10);
					printf ("\t\tCODIGO VALIDO...\n\n");
					system ("pause");
					system ("cls");
	
					printf ("|MODELDO AVIAO: %s\n",aviao.modelo);
					printf ("---------------------------|\n");
					printf ("|NOME DO CLIENTE : %s\n",aviao.nomeCliente);
					printf ("---------------------------|\n");
					printf ("|PAIS DO CLIENTE : %s\n",aviao.paisOrigCliente);
					printf ("---------------------------|\n");
					printf ("|CAPACIDADE DO AVIAO : %d\n",aviao.capacidade);
					printf ("---------------------------|\n");
					printf ("|CODIGO: %s",aviao.codigo);
					printf ("---------------------------|\n\n\n");
					system ("pause");
					printf("Deseja realmente EXCLUIR? [S/N]");
					scanf(" %c", &excluir);
				
				while(excluir !='S' && excluir !='N'){
					printf("Caracter inválido, digite novamente [S/N]");
					scanf(" %c", &excluir);
				}
				if(excluir == 'S'){
					aviao.codigo[0] = '\0';
					aviao.modelo[0] = '\0';
					aviao.nomeCliente[0] = '\0';
					aviao.paisOrigCliente[0] = '\0';
					aviao.capacidade = 0;
					printf("exclusão bem sucedida!");
					system("pause");
					}	
				break;	
				}		
			}else{
				
				system ("cls");
				printf ("CODIGO INVALIDO\nTENTE NOVAMENTE\n\n");	
			}
		}
	
		}				
	}
	


	fclose(arq);
}

void exclusaoTeste(struct Testes testes){
	
		textbackground(0); // Define cor de fundo

		

	system("pause");
}


void inclusaoTeste(struct Testes testes,FILE *arqT){
		arqT=fopen ("structTeste.txt","ab");
		
			if (arqT== NULL){
	printf ("Erro na abertura..");
	exit (1);
}
char codigo[7];
int i, flag, codigoP, velocM;
		
	printf(" INCLUSÃO TESTE \n");
	printf("digite o codigo do aviao: ");
	fflush(stdin);
	fgets(codigo,8,stdin);
	while(codigo[0] == '\n'){
		printf("código inválido, digite novamente:");
		fgets(codigo,8,stdin);
	}
	strcpy(testes.idAviao,codigo);
	
	printf("digite o codigo sequencial da pista: ");
	while(codigoP <= 0 || codigoP >9999){
		printf("código inválido, digite novamente:");
		scanf("%d",&codigoP);
	}
	testes.idPista = codigoP;
	
	printf("\n digite a velocidade maxima em km/h: ");
	scanf("%d", &velocM);
	while(velocM <= 0){
		printf("velocidade inválida, digite novamente:");
		scanf("%d",&velocM);
	}	
	testes.velocidadeMax = velocM;
	_strdate(testes.data);
	system("pause");
	fwrite (&testes,sizeof (testes),1,arqT);
	fclose(arqT);
}
void alterarTeste(struct Testes testes,FILE *arqT){
char codigo[7], menu, sn;
int flag = 0;
	do{
		
		printf(" ALTERAÇÃO TESTE \n");
		printf("digite o codigo do avião: ");
		fflush(stdin);
		fgets(codigo,8,stdin);
		while(codigo[0] == '\n'){
			printf("código inválido, digite novamente:");
			fgets(codigo,8,stdin);
		}
		
		//fazer for para varrer se tem codigo
		if(stricmp(testes.idAviao,codigo) == 0){
			flag++;
		}
		if(flag != 0){
		
		
		
				 mostrarMenuAlterar ();
		}else{
			printf("código inválido,deseja digitar novamente? [S/N]");
			scanf(" %c", &sn);
			while(sn !='S' && sn !='N'){
				printf("resposta inválida, digite novamente: ");
				scanf(" %c", &sn);
			}
			if(sn == 'N'){
				exit(1);
			}
		}
	}while(sn != 'N');
		
}
 void mostrarMenuAlterar (){
 	setlocale(LC_ALL, "C");
	char tecla;
	int i, opcao;
	textbackground(0); // Define cor de fundo
	clrscr();          // Limpa a tela
	_setcursortype(0); // Desliga o cursor
	textcolor(15);     // Define cor de face

	gotoxy(19,6);
	printf("           <<<  Menu Pista  >>>");
	// DESENHAR UM QUADRADO
	// Desenha as linhas horizontais do quadrado
	textcolor(7);
	for (i=34; i<=50; i++) {
		gotoxy(i,9);
		printf("%c", 196);
		gotoxy(i,18);
		printf("%c", 196);
	}
	// Desenha as linhas verticais do quadrado
	for (i=9; i<=17; i++) {
		gotoxy(33,i);
		printf("%c", 179);
		gotoxy(50,i);
		printf("%c", 179);
	}
	// Desenha os quanto cantos do quadrado
	gotoxy(33,9);
	printf("%c", 218);
	gotoxy(50,9);
	printf("%c", 191);
	gotoxy(33,18);
	printf("%c", 192);
	gotoxy(50,18);
	printf("%c", 217);

	// OPERACAO DO MENU
	opcao = 1; // Seleciona a primeira opcao do menu
	do {
		setlocale(LC_ALL, "");
		textcolor(7);
		textbackground(0);
		gotoxy(34,11);
		printf("  ALTERAR VELOCIDADE ");
		gotoxy(34,12);
		printf("  ALTERAR ID AVIAO");
		gotoxy(34,13);
		printf("  ALTERAR ID PISTA");
		// Escreve o item selecionado em destaque
		textcolor(15);
		//textbackground(1);
		switch (opcao) {
			case 1:
				gotoxy(34,11);
				printf("->");
				break;
			case 2:
				gotoxy(34,12);
				printf("->");
				break;
			case 3:
				gotoxy(34,13);
				printf("->");
				break;

		}
		tecla = getch();    // Recebe a tecla pressionada
		if (tecla == -32) { // -32 = tecla especial (setas, etc...)
			tecla = getch(); // Recebe o novo valor ecoado no buffer por ser tecla especial
			if (tecla == 72) // Seta para cima
				opcao--;
			if (tecla == 80) // Seta para baixo
				opcao++;
			if (opcao == 0)
				opcao = 5;
			if (opcao == 6)
				opcao = 1;
		}
	} while ((tecla != 13) && (tecla != 27)); // 13=ENTER 27=ESC
 	
 }

void alterarPista(struct PistaTeste pista){
int codigoP, opcao;
char enderecoNovo[64],uf[2];
float tamanhoNovo;	
	system("cls");
	printf("ALTERAÇÃO DA PISTA DE TESTE:");
	printf("digite o codigo sequencial da pista: ");
	while(codigoP <= 0 || codigoP >9999){
		printf("código inválido, digite novamente:");
		scanf("%d",&codigoP);
	}
	//faz a varredura aqui gustavo
		if(stricmp(pista.codSequencial,codigoP) == 0){
			printf("código sequencial válido\n");
			printf ("|CÓDIGO SEQUENCIAL: %s\n",pista.codSequencial);
			printf ("---------------------------|\n");
			printf ("|ENDEREÇO DA PISTA : %s\n",pista.enderecoPista);
			printf ("---------------------------|\n");
			printf ("|UNIDADE FEDERATIVA DA PISTA:  : %s\n",pista.uf);
			printf ("---------------------------|\n");
			printf ("|TAMANHO DO CIRCUITO : %f\n",pista.tamanhoCircuito);
			printf ("---------------------------|\n");
			
			//opcao = funcao de menu
			
			switch(opcao){
				case 1:
					printf("alteração do endereço\n");
					printf("digite o novo endereço da pista: ");
					fflush(stdin);
					fgets(enderecoNovo,64,stdin);
					while(enderecoNovo[0] == '\n') {
						printf("endereço inválido, digite novamente:");
						fflush(stdin);
						fgets(enderecoNovo,64,stdin);
					}
					printf("endereço alterado com sucesso! ");
					strcpy(pista.enderecoPista,enderecoNovo);
					system("pause");
					break;
				
				case 2:
					printf("alteração da unidade federativa\n");
					printf("digite o novo UF da pista: ");
					fflush(stdin);
					fgets(uf,2,stdin);
					while(enderecoNovo[0] == '\n') {
						printf("uf inválida, digite novamente:");
						fflush(stdin);
						fgets(uf,2,stdin);
					}
					printf("endereço alterado com sucesso! ");
					strcpy(pista.uf,uf);
					system("pause");
					break;
				case 3:
					printf("alteração do tamanho do circuito\n");
					printf("digite o novo tamanho do circuito: ");
					scanf("%f", &tamanhoNovo);
					while(tamanhoNovo<=0){
						printf("tamanho inválido, digite novamente: ");
						scanf("%f", &tamanhoNovo);
					}
					break;
			}
			system ("pause");
			
		}
	
}
